          }
        },
        "responses": {
          "200": {
            "description": "Событие успешно обновлено",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Событие успешно обновлено"
                    },
                    "event": {
                      "$ref": "#/components/schemas/CalendarEvent"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Ошибка запроса",
