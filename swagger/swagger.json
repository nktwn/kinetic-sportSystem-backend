        }
      }
    },
    "/admin/requests": {
      "get": {
        "tags": ["Admin"],
        "summary": "Получить все заявки на одобрение",
        "operationId": "getPendingRequests",
        "security": [
          { "BearerAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "Список заявок",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "departments": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Department" }
                    },
                    "events": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/CalendarEvent" }
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Нет прав",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/admin/requests/{type}/{id}/evaluate": {
      "put": {
        "tags": ["Admin"],
        "summary": "Оценить заявку (одобрить или отклонить)",
        "operationId": "evaluateRequest",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["department", "event"],
              "example": "event"
            },
            "description": "Тип заявки: департамент или событие"
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            },
            "description": "ID департамента или события"
          },
          {
            "name": "action",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["approve", "reject"],
              "example": "approve"
            },
            "description": "Действие: одобрить или отклонить"
          }
        ],
        "security": [
          { "BearerAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "Успешный ответ",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "event одобрен"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Запись не найдена",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "400": {
            "description": "Неверный ввод",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "403": {
            "description": "Нет прав",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Root",
        "operationId": "root__get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Body_login_auth_login_post": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "title": "Username"
          },
          "password": {
            "type": "string",
            "title": "Password"
          }
        },
        "required": ["username", "password"],
        "title": "Body_login_auth_login_post"
      },
      "EvaluateRequest": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": ["approve", "reject"],
            "description": "Действие для заявки: одобрить или отклонить"
          }
        },
        "required": ["action"]
      },
      "HTTPValidationError": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "title": "Detail"
          }
        },
        "title": "HTTPValidationError"
      },
      "Token": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "title": "Access Token"
          },
          "token_type": {
            "type": "string",
            "title": "Token Type"
          }
        },
        "required": ["access_token", "token_type"],
        "title": "Token"
      },
      "UserCreate": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" },
          "iin": { "type": "string" },
          "full_name": { "type": "string" },
          "rank": { "type": "string" },
          "role": { "type": "string" },
          "departmentId": { "type": "integer", "nullable": true }
        },
        "required": ["username", "password", "iin", "full_name", "rank", "role"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "username": { "type": "string" },
          "full_name": { "type": "string" },
          "rank": { "type": "string" },
          "role": { "type": "string" },
          "departmentId": { "type": "integer", "nullable": true }
        }
      },
      "Department": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "DepartmentCreate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name"]
      },
      "DepartmentUpdate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "ValidationError": {
        "type": "object",
        "properties": {
          "loc": {
            "type": "array",
            "items": {
              "anyOf": [
                { "type": "string" },
                { "type": "integer" }
              ]
            },
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "required": ["loc", "msg", "type"],
        "title": "ValidationError"
      },
      "ActivityType": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Сила"
          }
        }
      },
      "ActivityClass": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "11"
          },
          "name": {
            "type": "string",
            "example": "Отжимания"
          }
        }
      },
      "CalendarEvent": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 2 },
          "title": { "type": "string", "example": "Timed event" },
          "start": { "type": "string", "format": "date-time", "example": "2025-04-25T12:00:00" },
          "location": { "type": "string", "example": "Astana" },
          "type": { "type": "string", "example": "Сила" },
          "class": { "type": "string", "example": "Отжимания" },
          "status": {
            "type": "string",
            "enum": ["pending", "approved", "rejected"],
            "example": "approved"
          }
        },
        "required": ["title", "start", "location", "type", "class", "status"]
      },
      "UserShort": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 5 },
          "username": { "type": "string", "example": "john_doe" },
          "full_name": { "type": "string", "example": "John Doe" },
          "rank": { "type": "string", "example": "Captain" },
          "role": { "type": "string", "example": "employee" }
        }
      },
      "UpdateEventRequest": {
        "type": "object",
        "properties": {
          "start": {
